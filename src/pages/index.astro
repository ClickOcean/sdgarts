---
import Layout from '../layouts/Layout.astro';

import Welcome from '../blocks/Welcome.astro';
import Exploration from '../blocks/Exploration.astro';
import Networking from '../blocks/Networking.astro';
import News from '../blocks/News.astro';
import Collection from '../blocks/Collection.astro';
import Bibliophile from '../blocks/Bibliophile.astro';

import welcome from '../data/welcome.json';
import exploration from '../data/exploration.json';
import networking from '../data/networking.json';
import news from '../data/news.json';
import collection from '../data/collection.json';
import bibliophile from '../data/bibliophile.json';

const pageSettings = {
	title: 'SDG Arts & Science Foundation',
	descr: '',
	bodyColor: 'white',
	popap: {
		active: true,
		initialSlide: 0,
		id: 'art',
		noTitle: true,
		noLoop: true,
		title: {
			slider: {
				active: true,
				data: collection.slider
			},
			subtitle: 'Art Collection'
		},
		slider: collection.slider,
		dataImg: {
			path: 'collection/popup',
			objectFit: 'contain',
			grid: 2.4
		},
		arrow: 'center'
	}
};
---

<Layout pageSettings={pageSettings}>
	<Welcome data={welcome} />
	<Exploration data={exploration} />
	<Networking data={networking} />
	<News data={news} />
	<Collection data={collection} />
	<Bibliophile data={bibliophile} />
</Layout>
