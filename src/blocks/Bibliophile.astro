---
import Container from '../components/Container.astro'
import Title from '../components/Title.astro'
import Slider from '../components/Slider.astro'
import Anchor from '../components/Anchor.astro'

const { title, slider } = Astro.props.data
---

<section class="bibliophile" data-scroll-section>
  <Anchor id={'book-collecrion'} />
  <Container>
    <div class="bibliophile__content">
      <Title title={title} mod={'slider'} animScroll={1.5} />
      <Slider
        slider={slider}
        grid={3}
        transparent
        squareImg
        page={'project'}
        dataImg={{
          path: 'bibliophile/main-slider',
          objectFit: 'contain'
        }}
      />
    </div>
  </Container>
</section>

<style lang="scss">
  .bibliophile {
    position: relative;
    width: 100%;

    &__content {
      width: 100%;

      @include des {
        padding: d(26) 0 d(60);
      }

      @include tab {
        padding: t(26) 0 t(60);
      }

      @include mob {
        padding: m(34) m(50) m(20);
      }
    }
  }
</style>
