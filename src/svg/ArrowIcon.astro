---
const { position } = Astro.props;
---

<svg class={`arrow ${position ? `arrow--${position}` : ''}`} width="36" height="38" viewBox="0 0 36 38" fill="none" xmlns="http://www.w3.org/2000/svg">
	<path d="M2 2L18.7463 19L2 36" stroke="var(--black)" stroke-width="5"></path>
</svg>

<style lang="scss">
	.arrow {
		position: absolute;
		top: 0;
		left: 0;
		width: 100%;
		height: 100%;

		&--left {
			transform: scaleX(-1);
		}
	}
</style>
